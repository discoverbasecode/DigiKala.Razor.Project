@page
@model DigiKala.Razor.Presentations.Pages.Accounts.ForgotPasswordModel
@{
    ViewData["Title"] = "بازنشانی کلمه عبور";
    Layout = "Shared/_AccountsLayout";
}
<div class="card px-4 py-2 box-shadow-2">
    @if (Model.SuccessMessage != null)
    {
        <div class="alert alert-light alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    }

    <div class="card-header text-center">
        <img src="~/img/logos/logo-color-big.png" alt="company-logo" class="mb-3" width="80">
        <h4 class="text-uppercase text-bold-400 grey darken-1">بازنشانی کلمه عبور</h4>
    </div>
    <div class="card-body">
        <div class="card-block mx-auto">
            <form method="post" asp-page="ForgotPassword">
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="text" class="form-control form-control-sm" asp-for="@Model.DtoForgotPassword.Mobile" placeholder="تلفن همراه خود را وارد کنید">
                        <span asp-validation-for="@Model.DtoForgotPassword.Mobile" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-danger px-4 py-1 text-uppercase white  box-shadow-2 border-0">ارسال کد فعالسازی</button>
                </div>
            </form>
        </div>
    </div>
</div>