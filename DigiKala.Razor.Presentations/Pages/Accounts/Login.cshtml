@page
@model DigiKala.Razor.Presentations.Pages.Accounts.LoginModel
@{
    ViewData["Title"] = "ورود حساب کاربری";
    Layout = "Shared/_AccountsLayout";
}
<div class="card px-4 py-2 box-shadow-2">
    @if (Model.SuccessMessage != null)
    {
        <div class="alert alert-light alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    }

    <div class="card-header text-center">
        <img src="~/img/logos/logo-color-big.png" alt="company-logo" class="mb-3" width="80">
        <h4 class="text-uppercase text-bold-400 grey darken-1">ورود حساب کاربری</h4>
    </div>
    <div class="card-body">
        <div class="card-block mx-auto">
            <form method="post" asp-page="Login">
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="text" class="form-control form-control-sm" asp-for="@Model.DtoLogin.Mobile" placeholder="تلفن همراه">
                        <span asp-validation-for="@Model.DtoLogin.Mobile" class="text-danger"></span>
                    </div>
                    <br/>
                    <div class="col-md-12">
                        <input type="password" class="form-control form-control-sm" asp-for="@Model.DtoLogin.Password" placeholder="کلمه عبور">
                        <span asp-validation-for="@Model.DtoLogin.Password" class="text-danger"></span>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0 ml-5">
                                <input asp-for="DtoLogin.RememberMe" type="checkbox" class="custom-control-input" checked id="rememberme">
                                <label class="custom-control-label float-left" for="rememberme">مرا به خاطر بسپار</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-danger px-4 py-1 text-uppercase white  box-shadow-2 border-0"> ورود </button>
                </div>
            </form>
        </div>
    </div>
    <div class="card-footer grey darken-1">
        <div class="text-center mb-1">رمز عبور را فراموش کرده اید؟ <a href="/Accounts/ForgotPassword"><b>بازیابی</b></a></div>
        <div class="text-center">آیا حساب کاربری ندارید؟ <a href="/Accounts/Register"><b>ثبت نام</b></a></div>
    </div>
</div>